{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["./src/types/scss-env.d.ts", "./src/**/*.tsx", "./src/types/index.d.ts"],
  "exclude": ["./node_modules"]
}
